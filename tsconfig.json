{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "watch": false,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true
  }
}
